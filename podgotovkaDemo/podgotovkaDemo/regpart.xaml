<Window x:Class="podgotovkaDemo.regpart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:podgotovkaDemo"
        mc:Ignorable="d"  WindowState="Maximized"
        Title="Регистрация" Height="1000" Width="1720" MinHeight="750" MinWidth="800">
    <Grid>
        <DockPanel VerticalAlignment="Top">
            <Image Source="C:\Users\ДимаВащеКласс\source\repos\podgotovkaDemo\podgotovkaDemo\kart\Мастер пол.png" Width="70" Height="70" Margin="10" HorizontalAlignment="Left"/>
            <Button Content="Назад"  FontSize="25" Margin="10" Height="73" Width="247" Padding="5"  Background="#67BA80" x:Name="exit" Click="exit_Click" HorizontalAlignment="Right"/>

        </DockPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"   VerticalAlignment="Center" Background="#F4E8D3">
            <TextBlock Text="Регистрация" TextAlignment="Center" FontSize="30"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Text="Фамилия директора" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="patranomik" Margin="5" Width="300" Height="40" FontSize="22" HorizontalAlignment="Left"></TextBox>
                    <TextBlock Text="Имя директора" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="nameder" Margin="5" Width="300" Height="40" FontSize="22" HorizontalAlignment="Left"></TextBox>
                    <TextBlock Text="Отчество директора" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="otchedir" Margin="5" Width="300" Height="40" FontSize="22" HorizontalAlignment="Left"></TextBox>


                    <TextBlock Text="Логин" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="Login" Padding="5" Width="300" Height="40" FontSize="22" Margin="5" HorizontalAlignment="Left"></TextBox>
                    <TextBlock Text="Пароль" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="Password" Padding="5" Width="300" Height="40" FontSize="22" Margin="5" HorizontalAlignment="Left"></TextBox>
                </StackPanel>
                <StackPanel >
                    <TextBlock Text="Название компании" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="namekomp" Padding="5" Width="300" Height="40" FontSize="22" Margin="5" HorizontalAlignment="Left"></TextBox>
                    <TextBlock Text="Тип компании" FontSize="22" Padding="5"></TextBlock>
                    <ComboBox Name="typekomp" Padding="5" Width="300" Height="40" FontSize="22" Margin="5" HorizontalAlignment="Left"></ComboBox>
                    <TextBlock Text="ИНН" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="innk" Padding="5" Width="300" Height="40" FontSize="22" Margin="5" HorizontalAlignment="Left"></TextBox>
                    <TextBlock Text="Email" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="email" Margin="5" Width="300" Height="40" FontSize="22" HorizontalAlignment="Left"></TextBox>
                    <TextBlock Text="Номер телефона(+...)" FontSize="22" Padding="5"></TextBlock>
                    <TextBox Name="nomer" Margin="5" Width="300" Height="40" FontSize="22" HorizontalAlignment="Left"></TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Зарегистрироваться" FontSize="22" Height="64" Width="236" Padding="5"  Background="#67BA80" Margin="20" Name="reg" Click="reg_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
