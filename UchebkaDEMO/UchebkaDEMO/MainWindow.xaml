<Window x:Class="UchebkaDEMO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchebkaDEMO"
        mc:Ignorable="d"
        Icon="Source/Мастер пол.ico"
        Title="Работа с партнерами" Height="450" Width="700" MinHeight="450" MinWidth="700">
    <Grid Background="#F4E8D3">
        <Image Source="Source/Мастер пол.png" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
        <Button Name="Exit_Button" Content="Выход" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Width="70" Height="25" Background="White" Click="Exit_Button_Click"></Button>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Width="500">
            <Button Name="ViewPartnersButton" Content="Просмотр списка" Margin="20" Height="35" Background="White" Click="ViewPartnersButton_Click"></Button>
            <Button Content="Просмотр истории реализации" Margin="20" Height="35" Background="White"></Button>
            <Button Content="Отчеты" Margin="20" Height="35" Background="White"></Button>
        </StackPanel>
    </Grid>
</Window>
